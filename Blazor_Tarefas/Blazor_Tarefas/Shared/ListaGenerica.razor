@typeparam Generico

@if (ListaItem == null)
{
    if(Carregando == null)
    {
       <text> Carregando... </text>
    }
    else
    {
        @Carregando
    }
}
else if (!ListaItem.Any())
{
    if(SemRegistro == null)
    {
        <text> Não existem tarefas</text>
    }
    else
    {
      @SemRegistro  
    }
} 
else
{
    foreach (var elemento in ListaItem)
    {
        <tr>
            @Lista(elemento)
        </tr>
    }
}


@code{
    [Parameter] public RenderFragment Carregando { get; set; }
    [Parameter] public RenderFragment SemRegistro { get; set; }
    [Parameter] public List<Generico> ListaItem { get; set; }
    [Parameter] public RenderFragment<Generico> Lista { get; set; }
}